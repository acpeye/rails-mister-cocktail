<div class="navbar-wagon">
  <h2>The Drink's On Me</h2>
  <div class="navbar-wagon right">
  <%= link_to(cocktails_path) do %>
    <p class="btn btn-primary" style="margin-right: 10px"><i class="fas fa-home"></i></p>
  <% end %>
  <%= link_to(new_cocktail_path(@cocktail)) do %>
    <p class="btn btn-primary"><i class="fas fa-glass-martini"></i> Add New Cocktail</p>
  <% end %>
  </div>
</div>
<div class="container">
  <h1><%= @cocktail.name %></h1>

  <%= link_to(cocktails_path) do %>
    <p class="btn btn-primary">Home</p>
  <% end %>

  <h3> Ingredients </h3>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <p>
          <%= dose.ingredient.name %> - <%= dose.description %>
          <%= link_to(dose_path(dose), method: :delete) do %>
            Delete
          <% end %>
        </p>
      </li>
    <% end %>
  </ul>
  <%= link_to(new_cocktail_dose_path(@cocktail)) do %>
    <p class="btn btn-primary">Add New Dose</p>
  <% end %>
</div>
